<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="Img">

	<!-- 이미지 파일 정보 삽입 -->
	<insert id="insert">
		insert into img 
			values(
					${img_seq}.nextval
					,#{ori_name}
					,#{sys_name}
					<choose>
						<when test="img_desc == null or img_desc == '' ">
							,default
						</when>
						<otherwise>
							,#{img_desc}
						</otherwise>
					</choose>
					,#{parent_seq}
				 )
	</insert> 
	
</mapper>