<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="Chat">

	<!-- 채팅 내역 삽입 -->
	<insert id="insert">
		insert into chat values(#{room},#{message},#{nickname},#{write_date})
	</insert> 
	
	
	<!-- 채팅방  불러오기 -->
	<select id="selectChatRoom" resultType="kh.spring.DTO.ChatDTO">
  		select distinct room , nickname from chat where nickname = #{value}
  	</select>
	
	<!-- 방별 채팅 내역 불러오기 -->
	<select id="selectRoom" resultType="kh.spring.DTO.ChatDTO">
  		select * from chat where room = #{value}
  	</select>
	
	<insert id="insertSearch">
		insert into chat values(#{room},null,#{nickname},null)
	</insert>
</mapper>